<%= if @group do %>
  <h3>Your Group</h3>
  <p><%= @group.name %></p>
  <p><%= @group.rules %></p>
<% else %>
  <h3>You don't have a Group!</h3>
  <p>You can either join one or create one</p>
  <%= link("Create", to: Routes.group_path(@conn, :new)) %>
  <%= link("Join", to: Routes.group_membership_path(@conn, :new)) %>
<% end %>
